<% layout("/layouts/boilerplate") %>  <!-- to use the boilerplate layout for this page -->

<body>
    <h3>Create a new Listing</h3>

    <form method="POST" action="/listings">
        <label for="title" class="form-lable">Title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control">        <!--inorder to access these form data we written listing object's title key value pair will done, like wise-->
        <br><br>
        <textarea name="listing[description]" placeholder="Enter description"></textarea>
        <br><br>
        <input name="listing[image]" placeholder="Enter image URL/Link" type="text">
        <br><br>
        <input name="listing[price]" placeholder="Enter price" type="number">
        <br><br>
        <input name="listing[country]" placeholder="Enter country" type="text">
        <br><br>
        <input name="listing[location]" placeholder="Enter location" type="text">
        <br><br>
        <button>Add</button>
    </form>
</body>