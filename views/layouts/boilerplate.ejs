<!-- This is the boilerplate layout file using ejs-mate for templating and this boilerplate is a prototype front page layout for all other pages. 
ex: navbar is same for all pages so we can put it here in boilerplate.ejs and use it in other pages.  -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust</title>
    <!-- linking bootstrap css -->
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      crossorigin="anonymous"
    /> 
    <link rel="stylesheet" href="/css/style.css" />  <!--linking the css file which is in public/css folder-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital@0;1&display=swap" rel="stylesheet">
</head>
<body>
    <%- include("../includes/navbar.ejs") %>  <!-- including the navbar partial which is in includes folder -->
    <div class="container">
      <%- include("../includes/flash.ejs") %> <!-- including the flash partial which is in includes folder -->
      <%- body %>
    </div>    <!-- this body is a special keyword provided by ejs-mate which will be replaced by the content of the child page which uses this boilerplate layout -->

    <%- include("../includes/footer.ejs") %>  <!-- including the footer partial which is in includes folder -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
</html>